<div class="jumbotron">
<h1>List of all authors</h1>


<img style="display: none;" src ="https://i.redd.it/ounq1mw5kdxy.gif" />

    <div class = 'authors'>
      <% @authors.each do |author| %>
        <%= render 'author', author: author %>
      <% end %>
    </div>

    <hr />
    <p> Add new author </p>
    <%= form_for @author, remote: true, html: {class: 'new-author'} do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <hr />
      <%= f.label :surname %>
      <%= f.text_field :surname %>
      <hr />
      <%= f.label :age %>
      <%= f.number_field :age %>
      <hr />
      <%= f.submit 'Save' %>
    <%  end %>
</ul>
</div>
