<div class = 'conteiner'>
  <div class = 'row' data-post-id="<%= post.id %>">
    <div class="col-sm-12 col-md-8"><%= link_to post.title, post_path(id: post.id), role:'button', class:'list-group-item list-group-item-secondary'  %></div>
    <div class="col-sm-12 col-md-1"><%= link_to 'Edit', edit_post_path(id: post.id), role:'button',class: "btn btn-primary" %></div>
    <div class="col-sm-12 col-md-1"><%= link_to 'Delete', post_path(id: post.id), method: :delete, remote: true, data: {confirm: 'Are you sure?'}, role: 'button',class: "btn btn-danger" %></div>
  </div>
</div>
